<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="permispiste">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <mapping-file>mapping.xml</mapping-file>

        <class>com.permispiste.metier.ActionEntity</class>
        <class>com.permispiste.metier.AppartientEntity</class>
        <class>com.permispiste.metier.ApprenantEntity</class>
        <class>com.permispiste.metier.EstAssocieEntity</class>
        <class>com.permispiste.metier.FixeEntity</class>
        <class>com.permispiste.metier.IndicateurEntity</class>
        <class>com.permispiste.metier.JeuEntity</class>
        <class>com.permispiste.metier.MissionEntity</class>
        <class>com.permispiste.metier.ObjectifEntity</class>
        <class>com.permispiste.metier.ObtientEntity</class>

        <properties>
            <property name="hibernate.jdbc.url" value="jdbc:mysql://localhost:3306/permispiste"/>
            <property name="hibernate.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.jdbc.user" value="userepul"/>
            <property name="hibernate.jdbc.password" value="epul"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hbm2ddl.auto" value="update" />
            <property name="hibernate.max_fetch_depth" value="3"/>
        </properties>
    </persistence-unit>
</persistence>