<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/permispiste</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping resource="mapping.xml"/>
      <mapping class="com.permispiste.metier.ActionEntity"/>
      <mapping class="com.permispiste.metier.AppartientEntity"/>
      <mapping class="com.permispiste.metier.ApprenantEntity"/>
      <mapping class="com.permispiste.metier.EstAssocieEntity"/>
      <mapping class="com.permispiste.metier.FixeEntity"/>
      <mapping class="com.permispiste.metier.IndicateurEntity"/>
      <mapping class="com.permispiste.metier.InscriptionEntity"/>
      <mapping class="com.permispiste.metier.JeuEntity"/>
      <mapping class="com.permispiste.metier.MissionEntity"/>
      <mapping class="com.permispiste.metier.ObjectifEntity"/>
      <mapping class="com.permispiste.metier.ObtientEntity"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>